generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
  searches  Search[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Search {
  id        String   @id @default(cuid())
  url       String
  type      String // "screenshot" or "recording"
  fps       Int? // 30 or 60 (null for screenshots)
  multiPage Boolean? // true/false (null for screenshots)
  userName  String   @default("Unknown")
  userEmail String   @default("unknown@example.com")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
